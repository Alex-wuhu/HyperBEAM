{erl_opts, [debug_info]}.
{plugins, [pc]}.

{pre_hooks, [
    {"(linux|darwin|solaris)", compile, "make -C \"${REBAR_ROOT_DIR}\" wamr"},
	{"(linux|darwin|solaris)", clean, "rm -rf \"${REBAR_ROOT_DIR}/_build\""},
    {"(linux|darwin|solaris)", compile, "echo 'Pre-compile hook executed'"},
    {"(linux|darwin|solaris)", compile, "ls -l c_src"},
    {"(linux|darwin|solaris)", compile, "echo $PATH"}
]}.

{post_hooks, [
    {"(linux|darwin|solaris)", clean, "make -C \"${REBAR_ROOT_DIR}\" clean"},
    {"(linux|darwin|solaris)", compile, "echo 'Post-compile hook executed'"},
    {"(linux|darwin|solaris)", compile, "ls -l priv"}
]}.

{provider_hooks,
 [{pre, [{compile, {pc, compile}},
         {clean, {pc, clean}}]}]}.

{port_env, [
    {"(linux|darwin|solaris)", "CFLAGS", "$CFLAGS -I${REBAR_ROOT_DIR}/_build/wamr/core/iwasm/include"},
    {"(linux|darwin|solaris)", "LDFLAGS", "$LDFLAGS -L${REBAR_ROOT_DIR}/_build/wamr/lib -lvmlib -lei"},
    {"(linux|darwin|solaris)", "LDLIBS", "-lei"},
    {".*", "LDFLAGS", "$LDFLAGS -v"},
    {".*", "CC", "cc -v"}
]}.

{port_specs, [
    {"./priv/cu_erwamr.so", ["./c_src/cu_erwamr.c"]}
]}.

{deps, [
    {b64fast, {git, "https://github.com/ArweaveTeam/b64fast.git", {ref, "58f0502e49bf73b29d95c6d02460d1fb8d2a5273"}}},
    {jiffy, {git, "https://github.com/ArweaveTeam/jiffy.git", {ref, "74c956defa9116c85d76f77c3e9b5bd6de7bd39a"}}},
    {gun, "1.3.3"},
    {cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "2.12.0"}}}
]}.

{shell, [
    {apps, [ao]}
]}.

{eunit_opts, [verbose]}.